<h2 class="ui center aligned large header">Welcome to MessageMe- a complete Chatapp </h2>
<h4 class="ui center aligned small icon header">
  <i class="circular orange inverted user icon"></i>

  <h4 class="ui center aligned medium header">Edit your profile</h4>

  <div class="ui orange segment">

  <%= form_for(@user, :html => {class: "ui large fluid  raised form"}) do |f| %>

  <div class="field">
   
    <%= f.label :username %>
    
    <%= f.text_field :username, type: "text", placeholder: "Username" %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Password" %>
  </div>
  

  <%= f.submit "Edit", class: "ui orange button" %>

  <% end %> 

  <p class="ui center aligned small header">Want to leave MessageMe ? <%= link_to "Delete Account",user_path, method: :delete, data: {confirm: "Are you sure ?"} %></p>
</div>